@model List<User>

<div class="row m-1 p-1">
    <div id="users" class="col-3 w3-container w3-animate-zoom">
        @foreach (var item in Model)
        {
            <form asp-controller="Messanger" asp-action="GetMessage"
                  asp-route-UserName="@item.UserName"
                  data-ajax="true"
                  data-ajax-method="GET"
                  data-ajax-mode="replace"
                  data-ajax-update="#Message">

                <button type="submit" class="btn btn-block btn-outline-secondary w3-margin"
                        title="@item.Name"
                        asp-route-UserName="@item.UserName">
                    @item.UserName
                </button>

            </form>
        }
    </div>
    <div class="col-9 w3-container" id="Message">

    </div>
</div>